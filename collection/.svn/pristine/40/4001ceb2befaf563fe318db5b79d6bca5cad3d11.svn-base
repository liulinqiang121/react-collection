<script>
  const fields = [{
      key: 'ruleNo',
      label: '规则编号',
      width: 'auto'
    },
    {
      key: "ruleName",
      label: "规则名称",
      width: "auto"
    },
    {
      key: "riskTarget",
      label: "风险指标",
      width: "auto"
    },
    {
      key: "responseName",
      label: "响应",
      width: "auto"
    },


  ]
  import pagination from "../../public-components/pagination";
  export default {
    data() {
      return {
        createDropdownData: {},
        operationBtns: [{
          name: '查看',
          identifier: '',
          isShow: true,
        }, {
          name: '添加规则',
          identifier: '',
          dialog: {
            dialogFormVisible: false,
            form: {
              strategyId:this.$route.query.id,
              ruleName:'',
              status:'1',
              productType: this.$route.query.productTypeName,
              riskGradeId: '',
              overdueDaysId: '',
              overdueAmountId:'',
              responseId:'',
              responseFirst:'',
              responseSecond:'',
              responseThird:'',
            },
            rule: {
              ruleName: [
                {
                required: true,
                message: "不能为空",
                trigger: "blur"
                },
                this.$util.formRule.caseName
              ],
              riskGradeId: [
                { required: true, message: '请选择', trigger: 'change' }
              ],
              overdueDaysId: [
                { required: true, message: '请选择', trigger: 'change' }
              ],
              overdueAmountId: [
                { required: true, message: '请选择', trigger: 'change' }
              ],
              responseId: [
                { required: true, message: '请选择', trigger: 'change' }
              ],
            },
            formName: 'createForm',
            url: '/api/assignee/setup/addAiRule',
            title: '添加规则',
          },
          isShow: false,
        }, {
          name: '编辑',
          identifier: '',
          dialog: {
            dialogFormVisible: false,
            form: {
              strategyId:'',
              ruleName:'',
              status:'',
              productType:'',
              riskGradeId: '',
              overdueDaysId: '',
              overdueAmountId:'',
              responseId:'',
              responseFirst:'',
              responseSecond:'',
              responseThird:'',
            },
            rule: {
               ruleName: [
                {
                required: true,
                message: "不能为空",
                trigger: "blur"
                },
                this.$util.formRule.caseName
              ],
              riskGradeId: [
                { required: true, message: '请选择', trigger: 'change' }
              ],
              overdueDaysId: [
                { required: true, message: '请选择', trigger: 'change' }
              ],
              overdueAmountId: [
                { required: true, message: '请选择', trigger: 'change' }
              ],
              responseId: [
                { required: true, message: '请选择', trigger: 'change' }
              ],

            },
            formName: 'editForm',
            url: '/api/assignee/setup/editAiRule',
            title: '编辑',
          },
          isShow: true,
        }, {
          name: '删除规则',
          identifier: '',
          form: {
            ids: '',
            strategyId:''
          },
          url: '/api/assignee/setup/deleteAiRule',
          isShow: false,
        } ],
        hasSearch: false,
        tb: {
          data: [],
          fields: fields
        },
        loading: false,
        rules: {

        },
        total: 0,
        selected: [],
        filterParams: {
          currentPage: 1,
          pageSize: 15,
          strategyId:this.$route.query.id,
          status:''
        },
        tbStatus:''
      }
    },
    components: {
      pagination,
    },
    created() {
      this.getList();
    },
    methods: {
      // 调用数据列表的接口
      getList(code) {
        // var queryParams;
        // if (data) {
        //   queryParams = data
        // } else {
        //   queryParams = this.filterParams
        // }
        this.filterParams.status=code
        this.loading = true;
        this.$axios
          .post("/api/assignee/setup/queryAiRuleList", this.filterParams)
          .then(res => {
            this.loading = false;
            // console.log(res.data.data);
            if (res.data.code == 0) {
              this.tb.data = res.data.data.items;
              this.total = res.data.data.totalNum;
            } else {
              this.$util.failCallback(res.data, this);
            }
            this.loading = false;
          })
          .catch(err => {
            console.log(err);
            this.loading = false;
          });
      },
      // 在表格里面改变状态-类似编辑
      switchChange(val){
            this.$axios.post('/api/assignee/setup/editAiRule',
            {strategyId:this.$route.query.id,id:val.id,status:val.status}).then((res) => {
              if (res.data.code == 0) {
                 this.$message({
                  type: 'success',
                  message: res.data.msg
                })
                this.getList()
              } else {
                this.$util.failCallback(res.data, this)
              }
            }).catch((err) => {
              console.log(err)
            })
      },
      // 翻页
      changePage(index) {
        this.filterParams.currentPage = index;
        this.getList();
      },
      // 选中
      handleSelectionChange(arr) {
        this.selected = [];
        for (var item of arr) {
          this.selected.push(item.id)
        }
        console.log(this.selected)
      },
      // 删除规则
      deleteHandle(btn) {
          if (this.selected.length >= 1) {
          this.$confirm('此操作将永久删除该记录, 是否继续?', '提示', {
            confirmButtonText: '确定',
            cancelButtonText: '取消',
            type: 'warning'
          }).then(() => {
            this.$axios.post(btn.url, {ids:this.selected}).then((res) => {
              if (res.data.code == 0) {
                this.getList()
                this.$message({
                  type: 'success',
                  message: res.data.msg
                })


              } else {
                this.$util.failCallback(res.data, this)

              }
            }, (err) => {
              console.log(err)
            })
          }).catch(() => {
            // this.$message({
            //     type: 'info',
            //     message: '已取消删除'
            // });          
          });

        } else {
          this.$alert("请选择一条记录进行操作！", "提示", {
            confirmButtonText: "确定"
          });
        }
        


      },
      // 打开遮罩
      openCreateDialog(btn) {
        if (this.$refs[btn.dialog.formName] !== undefined) {
          this.$refs[btn.dialog.formName].resetFields()
        }
        btn.dialog.dialogFormVisible = true
        this.getcreateDropdownData()
      },
      // 获取规则下拉列表
      getcreateDropdownData(){
          this.$axios.post('/api/assignee/setup/initAddAiRule', {}).then((res) => {
              if (res.data.code == 0) {
                this.createDropdownData=res.data.data
                console.log(createDropdownData)

              } else {
                this.$util.failCallback(res.data, this)
              }
            }).catch((err) => {
              console.log(err)
            })
      },
      // 关闭遮罩
      dialogCloseHandle(btn) {
        btn.dialog.dialogFormVisible = false
        this.$refs[btn.dialog.form].resetFields()
      },
      // 打开遮罩
      openEditDialog(btn, row) {
        // this.tempRow = Object.assign({}, row)
        // console.log(this.tempRow)
        // btn.dialog.form = this.tempRow
        // 打开遮罩
        btn.dialog.dialogFormVisible = true
        this.$axios.post('/api/assignee/setup/queryAiRule', {id:row.id}).then((res) => {
              if (res.data.code == 0) {
                console.log(res.data.data)
                this.getcreateDropdownData()
                btn.dialog.form=res.data.data
                btn.dialog.form.strategyId=this.$route.query.id
                btn.dialog.form.productType=this.$route.query.productTypeName
              } else {
                this.$util.failCallback(res.data, this)
              }
            }).catch((err) => {
              console.log(err)
            })

        
       

      },
      // 遮罩提交
      dialogSubmitHandle(btn) {
        this.$refs[btn.dialog.formName].validate((valid) => {
          if (valid) {
            this.$axios.post(btn.dialog.url, btn.dialog.form).then((res) => {
              if (res.data.code == 0) {
                this.getList()
                this.$message({
                  type: 'success',
                  message: res.data.msg
                })
                this.dialogCloseHandle(btn)
                

              } else {
                this.$util.failCallback(res.data, this)
              }
            }).catch((err) => {
              console.log(err)
            })
          }
        })

      },
      
    },
  }

</script>

