<script>
  import outVisitRecode from './out_visit_recode'
  import visitRecode from './visit_record'
  const fields = [{
      key: "applyTime",
      label: "外访申请时间",
      width: "auto"
    },
    {
      key: "visitTime",
      label: "计划外访时间",
      width: "100"
    },
    {
      key: "visitName",
      label: "被访人姓名",
      width: "auto"
    },
    {
      key: "visitRelation",
      label: "关系",
      width: "auto"
    },
    {
      key: "visitPhone",
      label: "手机号",
      width: "auto"
    },
    {
      key: "addressType",
      label: "地址类型",
      width: "auto"
    },
    {
      key: "visitAddress",
      label: "地址",
      width: "auto"
    },
    {
       key: "templateName",
       label: '外访函件模板',
       width: "auto"
    },
    {
      key: "approveStatus",
      label: "状态",
      width: "auto"
    },
    {
      key: "applicantName",
      label: "催收员",
      width: "auto"
    },
    {
      key: "partnerName",
      label: "协助外访人",
      width: "auto"
    },
  ];
  const fields2 = [{
      key: "name",
      label: "姓名",
      width: ""
    },
    {
      key: "relation",
      label: "关系",
      width: ""
    },
    {
      key: "phone",
      label: "电话",
      width: "100"
    },
    {
      key: "addressType",
      label: "地址类型",
      width: ""
    },
    {
      key: "address",
      label: "地址",
      width: "200"
    },
  ];
  export default {
    name: "",
    props: {
      caseCode: {
        
      },
      caseId: {
      
      },
      caseManageId: {
        
      }
    },
    components: {
      outVisitRecode,
      visitRecode
    },
    data() {
      return {
        // 表格
        tb: {
          data: [],
          fields: fields
        },
        //   申请访问遮罩
        tb2: {
          data: [],
          fields: fields2
        },
        dialogForm: {
          caseId: this.caseId,
          caseCode: this.caseCode,
          caseManageId: this.caseManageId,
          approver: {},
          partner: {},
          visitDate: '',
          isSelf: '0',
          isJustice: '0',
          branchHelp: '0',
          templateId: '',
          visitInfo: {
          },
          staffId: ''
        },
        dropdownData: {},
        partner: [],
        rules: {},
        loading: false,
        dialogVisible: false,
        // 外访记录
        recodeVisible: false,
        title: '',
        outvisitTb: [],
        listData: [],
        selected: {},
        isAdd: false,
        pageSize: 5,
        currentPage: 1,
        total: 0,
        approver: '',
        partner: '',
        id: '',
        downId: '',
        applyItem: {},
        rules: {
          staffId: [{
            required: true,
            message: '审批人为必填项',
            trigger: 'blur,change'
          }, ],
          visitDate: [{
            required: true,
            message: '外访时间为必填项',
            trigger: 'blur,change'
          }],
          "visitInfo.address": [{
            required: true,
            message: '地址为必填项',
            trigger: 'blur,change'
          }],
          "visitInfo.addressType": [{
            required: true,
            message: '地址类型为必填项',
            trigger: 'blur,change'
          }],
          "visitInfo.name": [{
            required: true,
            message: '被访人为必填项',
            trigger: 'blur,change'
          }],
          "visitInfo.relation": [{
            required: true,
            message: '关系为必填项',
            trigger: 'blur,change'
          }],
          "visitInfo.phone": [{
            required: true,
            message: '电话为必填项',
            trigger: 'blur,change'
          }],
        },
        self: false,
        templateSelected: true,
        endDateOpt: {
           disabledDate: (time) => {
             return time.getTime() < Date.now() - 24*60*60*1000;
         }
        },
        toggleExpansionText:'外访详情',
        getRowKeys(row) {
          return row.id;
        },
        expansionArr: [],
        recodeDetailVisible: false,
        outVisitData: {},
        templates: [],
        templateId: '',
        justiceName: ''

      };
    },
    created() {
      this.getList();
      this.getDropdownData();
    },
    methods: {
      // 遮罩
      close(refresh) {
        this.$refs.dialogForm.resetFields();
        this.dialogVisible = false;
        this.partner = '';
        this.approver = '';
        this.dialogForm.isSelf = '0';
        this.dialogForm.isJustice = '0';
        this.dialogForm.branchHelp = '0';
        if(refresh) this.getList();
      //  this.$refs.applyoutvisitTable.clearFilter();
      },
      // 选择申请外访的条件
      handleCurrentChange(arr) {

      },
      // 提交
      submitApplyOutVisit() {
        this.$refs.dialogForm.validate((valid) => {
          if (valid) {
            this.$axios
              .post("/api/assignee/collectionApply/saveVisitApply", this.dialogForm)
              .then(res => {
                if (res.data.code == 0) {
                  this.$message.success('提交成功');
                  this.close(true);
                } else {
                  this.$util.failCallback(res.data, this);
                }
              })
              .catch(err => {
                console.log(err);
              });
          }
        })

      },
      // 参看 添加外访记录
      addRecode() {
        if(!this.applyItem) {
          this.$message.warning('暂无申请外访,不能添加外访记录');
          return false;
        }
        this.recodeVisible = true;
        this.isAdd = true;
        this.title = "添加外访记录";
        this.id = '';
      },
      // 关闭遮罩层
      recodeClose() {
        this.recodeVisible = false;
        this.id = ''
      },
      // 申请外访
      applyoutvisit() {    
         this.$axios
          .post("/api/assignee/collectionApply/judgeVisitApply", {
            caseId: this.caseId,
          })
          .then(res => {
            if (res.data.code == 0) {
             if(res.data.data.allow) {
                 this.dialogVisible = true;
             } else {
               this.$message.error('外访已有申请，不可再次申请')
             }
            } else {
              this.$util.failCallback(res.data, this);
            }
          })
          .catch(err => {
            console.log(err);
          });
      },

      // 调用列表接口，获取外访数据
      getList() {
        this.$axios
          .post("/api/assignee/collectionManage/queryVisitApply", {
            caseCode: this.caseCode,
            caseId: this.caseId,
            caseManageId: this.caseManageId
          })
          .then(res => {
            if (res.data.code == 0) {
              this.tb.data = res.data.data;
              this.tb.data.forEach( (item) => {
                item.outRecord = {}
              })
              this.applyItem = res.data.data[0];

            } else {
              this.$util.failCallback(res.data, this);
            }
          })
          .catch(err => {
            console.log(err);
          });
      },
      // 获取下拉
      getDropdownData() {
        this.$axios
          .post("/api/assignee/collectionApply/visitApplyInitParam", {
            caseCode: this.caseCode,
            caseId: this.caseId,
            caseManageId: this.caseManageId
          })
          // {
          // "caseId":24,
          // "caseManageId":4,
          // "caseCode":"0747fba2-d2fd-46e7-91b0-d3f9922e2cb6",
          // }
          .then(res => {
            if (res.data.code == 0) {
              this.listData = res.data.data.visitInfo
              this.tb2.data = this.listData.slice(0, this.pageSize);
              for (var item in this.tb2.data) {
                this.tb2.data[item].index = item
              }
              this.dropdownData.approver = res.data.data.approver;
              if(this.dropdownData.approver.length) {
                this.dialogForm.staffId = this.dropdownData.approver[0].staffId;
                this.dialogForm.approver = this.dropdownData.approver[0];
              }
              this.dropdownData.partner = res.data.data.partner;
              this.dropdownData.template = res.data.data.template
              this.total = this.listData.length;
            } else {
              this.$util.failCallback(res.data, this);
            }
          })
          .catch(err => {
            console.log(err);
          });
      },
      // 参看详情
      showDetail(scope) {
        this.id = scope.row.id;
        this.recodeDetailVisible = true;
        this.outVisitData = scope.row.outRecord
      },
      // 设置不可选时间，范围小于当前时间
      disabledDate(time) {
        let timeSpace = time.getTime() >= Date.now() ;
        return timeSpace;
      },
      // 翻页
      handleCurrentChange(index) {
        let start = this.pageSize * (index - 1),
        end = this.pageSize * index;
        this.tb2.data = this.listData.slice(start, end);
        this.currentPage = index;
      },
      // 点击选择外访对象
      rowClick(row) {
        let isSelf = this.dialogForm.isSelf;
        let isJustice = this.dialogForm.isJustice;
        let branchHelp = this.dialogForm.branchHelp;
        this.dialogForm.visitInfo = Object.assign({},row);
        this.$refs.applyoutvisitTable.clearSelection();
        this.$refs.applyoutvisitTable.toggleRowSelection(row);
        this.dialogForm.isSelf = isSelf;
        this.dialogForm.isJustice = isJustice;
        this.dialogForm.branchHelp = branchHelp;
      },
      // 选择外访对象
      chooseVisiter(val, row) {
        let isSelf = this.dialogForm.isSelf;
        let isJustice = this.dialogForm.isJustice;
        let branchHelp = this.dialogForm.branchHelp;
        this.dialogForm.visitInfo = Object.assign({},row);
        this.$refs.applyoutvisitTable.clearSelection();
        this.$refs.applyoutvisitTable.toggleRowSelection(row);
        this.dialogForm.isSelf = isSelf;
        this.dialogForm.isJustice = isJustice;
        this.dialogForm.branchHelp = branchHelp;
      },
      // 审批人改变
      approverChange(id) {
        for (var item of this.dropdownData.approver) {
          if (item.staffId == id) {
            this.dialogForm.approver = item;
            console.log(item)
            return;
          }
        }
      },
      // 陪同人改变
      partnerChange(id) {
        for (var item of this.dropdownData.partner) {
          if (item.staffId == id) {
            this.dialogForm.partner = item;
            return;
          }
        }
      },
      // 刷新
      refresh() {
        this.getList()
      },
      // 选择邮件申请
      isLetters(index) {
        this.templateSelected = false;
      },
      // 不选邮件申请
       noLetters(index) {
        this.templateSelected = true;
        this.dialogForm.templateId = '';
      },
      // 选择模板
      downTemplate(item) {   
        this.$axios({
          // 用axios发送post请求
          method: "post",
          url: "/api/assignee/collectionApply/downloadApplyFile", // 请求地址
          data: {
            	"templateId": this.templateId,
	            "justiceName": this.justiceName,
	            "name": item.name,
	            "url": item.url
          }, // 参数
          responseType: "blob" // 表明服务器返回的数据类型
        }).then(res => {
          // 处理返回的文件流
          const content = res.data;
          const blob = new Blob([content]);
          const fileName = decodeURI(res.headers["content-disposition"].split("=")[1]);
          if ("download" in document.createElement("a")) {
            // 非IE下载
            const elink = document.createElement("a");
            elink.download = fileName;
            elink.style.display = "none";
            elink.href = URL.createObjectURL(blob);
            document.body.appendChild(elink);
            elink.click();
            URL.revokeObjectURL(elink.href); // 释放URL 对象
            document.body.removeChild(elink);
          } else {
            // IE10+下载
            navigator.msSaveBlob(blob, fileName);
          }
        });
      },
      // 本人外访
      selfVisit() {
        this.self = true;
      },
      // 跟随出访
      NotSelf() {
        this.self = false;
      },
      renderHeader(createElement, { _self }) {
        return createElement(
          'span',
          // {
          //   'class': 'renderTableHead'
          // },
          [
            //  createElement('i', {
            //   attrs: { type: 'primary',size:'mini',class: 'el-icon-arrow-down' },
            //   on: { click: this.toggleRowExpansion }
            // }, 
            // [this.toggleExpansionText]


            createElement('span', {
              attrs: { type: 'primary',size:'mini' },
              on: { click: this.toggleRowExpansion }
            }, [this.toggleExpansionText]
            ),
          
          ]
        );
      },
      toggleRowExpansion(){},
      // 关闭详情弹窗
      recodeDetailClose() {
        this.recodeDetailVisible =  false;
      },
      // 获取详情
      getVisitDetail(row) {
         var record = Object.keys(row.outRecord);
         if(record.length != 0 || row.approveStatus == '待审批' || row.outRecord.visited){
            return false;
          }
         this.$axios
          .post("/api/assignee/collectionManage/queryVisitDetails", {
           id: row.id
          })
          .then(res => {
            if (res.data.code == 0) {
              row.outRecord = res.data.data || {};
              row.outRecord.visited = true;
            } else {
              this.$util.failCallback(res.data, this);
            }
          })
          .catch(err => {
            console.log(err);
          });
      },
      expandChange(row,expandedRows) {
        if(row.approveStatus == '待审批') {
          if(expandedRows.indexOf(row.id)) {
            expandedRows.splice(expandedRows.length-1)
          }
         // this.$message.error('外访处于待审批状态，暂时不能查看外访详情')
        }
      },
      // 选择模板
      chooseTemplate(templateId) {
        this.dropdownData.template.forEach( (item)=> {
          if(templateId == item.templateId) {
            this.templates = item.templates;
            this.templateId = item.templateId;
            this.justiceName = item.justiceName;
          }
        })
      }

    }
  };

</script>
