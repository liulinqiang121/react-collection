      },
      loginSubmit(ev) {
        this.$refs.loginForm.validate((valid) => {
          if (valid) {
            this.$axios.post('/api/login', qs.stringify(this.$util.encodePostBody(this.loginForm))).then((res) => {
              if (res.data.code == 0) {
                // 请求过期备忘
                this.$store.dispatch('getLoginNotes')
                // 建立长连接请求备忘
                // this.$store.dispatch('getCurrentNotes')
                
                this.$router.push({
                  path: '/dashboard'
                })
                
                localStorage.setItem("username", this.loginForm.username)
                

                
              } else {
                this.$util.failCallback(res.data, this, function (_this) {
                  _this.errorWarn = true
                  _this.errorText = res.data.msg
                  _this.getPicCode()
                })

              }
            }).catch((err) => {
              console.log(err)
            })
          }
        })
      },
    

    },
  }

