<template>
  <div class="content-body">
    <div class="bd-top">
      <div class="md clearfix">
        <div class="md-left">
          <h5>智能催收策略设置</h5>
        </div>
        <div class="md-right">
          <el-button size="mini" type="primary" @click.native.prevent="openCreateDialog(operationBtns[1])">{{operationBtns[1].name}}</el-button>
          <el-button size="mini" type="primary" @click.native.prevent="deleteHandle(operationBtns[3])">{{operationBtns[3].name}}</el-button>
        </div>
      </div>
    </div>
    <div class="bd-main">
      <div class="table">
        <el-table ref="multipleTable" element-loading-text="拼命加载中" element-loading-spinner="el-icon-loading" :data="tb.data" tooltip-effect="dark"
          empty-text="暂无数据" v-loading="loading" @selection-change="handleSelectionChange">
          <el-table-column type="selection" width="100"></el-table-column>
          <el-table-column v-for="field in tb.fields" align="left" :prop="field.key" :label="field.label" :width="field.width" :key="field.id">
          </el-table-column>
          <el-table-column fixed="right" label="操作" width="100">
            <template slot-scope="scope">
              <el-button size="mini" type="text" @click.native.prevent="openEditDialog(operationBtns[2],scope.row)">{{operationBtns[2].name}}</el-button>
            </template>
          </el-table-column>
        </el-table>
      </div>
    </div>
    <pagination :total="total" :pageSize="conditionForm.pageSize" @changePage="changePage" :current-page="conditionForm.currentPage"></pagination>
    <!-- 添加 -->

    <el-dialog :title="operationBtns[1].dialog.title" :visible.sync="operationBtns[1].dialog.dialogFormVisible" :close-on-click-modal="false">
      <el-form :model="operationBtns[1].dialog.form" label-width="100px" :rules="operationBtns[1].dialog.rule" :ref="operationBtns[1].dialog.formName">
        <el-form-item label="策略名称" prop="strategyName">
          <el-input v-model="operationBtns[1].dialog.form.strategyName" auto-complete="off"></el-input>
        </el-form-item>
        <el-form-item label="产品类型" prop="productType">
          <el-select v-model="operationBtns[1].dialog.form.productType" placeholder="请选择">
            <el-option v-for="item in dropdownData.productType" :key="item.id" :label="item.name" :value="item.code">
            </el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="策略描述" prop="strategyDesc">
          <el-input type="textarea" :rows="4" placeholder="请输入" v-model="operationBtns[1].dialog.form.strategyDesc">
          </el-input>
        </el-form-item>

      </el-form>
      <div slot="footer" class="dialog-footer">
        <el-button @click.native.prevent="dialogCloseHandle(operationBtns[1])">取 消</el-button>
        <el-button type="primary" @click.native.prevent="dialogSubmitHandle(operationBtns[1])">确 定</el-button>
      </div>
    </el-dialog>
    <!-- 编辑 -->
    <el-dialog :title="operationBtns[2].dialog.title" :visible.sync="operationBtns[2].dialog.dialogFormVisible" :close-on-click-modal="false">
      <el-form :model="operationBtns[2].dialog.form" label-width="100px" :rules="operationBtns[2].dialog.rule" :ref="operationBtns[2].dialog.formName">
        <el-form-item label="策略名称" prop="strategyName">
          <el-input v-model="operationBtns[2].dialog.form.strategyName" auto-complete="off"></el-input>
        </el-form-item>
        <el-form-item label="产品类型" prop="productType">
          <el-select v-model="operationBtns[2].dialog.form.productType" placeholder="请选择">
            <el-option v-for="item in dropdownData.productType" :key="item.id" :label="item.name" :value="item.code">
            </el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="策略描述" prop="strategyDesc">
          <el-input type="textarea" :rows="4" placeholder="请输入" v-model="operationBtns[2].dialog.form.strategyDesc">
          </el-input>
        </el-form-item>

      </el-form>
      <div slot="footer" class="dialog-footer">
        <el-button @click.native.prevent="dialogCloseHandle(operationBtns[2])">取 消</el-button>
        <el-button type="primary" @click.native.prevent="dialogSubmitHandle(operationBtns[2])">确 定</el-button>
      </div>
    </el-dialog>
  </div>
</template>


<script>
  const fields = [{
      key: 'strategyNo',
      label: '策略编号',
      width: '200'
    },
    {
      key: "strategyName",
      label: "策略名称",
      width: "auto"
    },
    {
      key: "productTypeName",
      label: "产品类型",
      width: "auto"
    },
    {
      key: "strategyDesc",
      label: "描述",
      width: "auto"
    },


  ]
  import pagination from "../../../public-components/pagination";
  export default {
    data() {
      return {
        dropdownData: {},
        operationBtns: [{
          name: '查看',
          identifier: 'sponsor_position_search',
          isShow: true,
        }, {
          name: '添加策略',
          identifier: 'sponsor_position_create',
          dialog: {
            dialogFormVisible: false,
            form: {
              productType: '',
              strategyDesc: '',
              strategyName: '',
            },
            rule: {
              // positionName: [{
              //   required: true,
              //   message: "职位名称不能为空",
              //   trigger: "blur"
              // }, ],
              // positionType: [{
              //   required: true,
              //   message: "职位类型不能为空",
              //   trigger: "change"
              // }, ],
              // description: [{
              //   required: true,
              //   message: "描述不能为空",
              //   trigger: "blur"
              // }, ],
              // roleId: [{
              //   required: true,
              //   message: "角色不能为空",
              //   trigger: "change"
              // }, ]

            },
            formName: 'createForm',
            url: '/api/assignee/setup/addAiStrategy',
            title: '添加策略',
          },
          isShow: false,
        }, {
          name: '编辑',
          identifier: 'sponsor_position_update',
          dialog: {
            dialogFormVisible: false,
            form: {
              productType: '',
              strategyDesc: '',
              strategyName: '',
              id: '',
            },
            rule: {

            },
            formName: 'editForm',
            url: '/api/assignee/setup/editcAiStrategy',
            title: '编辑',
          },
          isShow: true,
        }, {
          name: '删除策略',
          identifier: 'sponsor_position_delete',
          form: {
            id: ''
          },
          url: '/api/assignee/setup/deleteAiStrategy',
          isShow: false,
        }, ],
        hasSearch: false,
        tb: {
          data: [],
          fields: fields
        },
        loading: false,
        rules: {

        },
        total: 0,
        selected: [],
        conditionForm: {
          currentPage: 1,
          pageSize: 15,
        }
      }
    },
    components: {
      pagination,
      //   addSensitive,
      //   importWords
    },
    created() {
      this.getList(this.conditionForm);
      this.getdropdownData()
    },
    methods: {
      getdropdownData() {
        this.$axios.post('/api/assignee/setup/initAddAiStrategy', {}).then((res) => {
          if (res.data.code == 0) {
            this.dropdownData = res.data.data;


          } else {
            this.$util.failCallback(res.data, this)
          }
        }).catch((err) => {
          console.log(err)
        })
      },



      // 调用数据列表的接口
      getList(data) {
        var queryParams;
        if (data) {
          queryParams = data
        } else {
          queryParams = this.conditionForm
        }
        this.loading = true;
        this.$axios
          .post("/api/assignee/setup/queryAiStrategyList", queryParams)
          .then(res => {
            this.loading = false;
            // console.log(res.data.data);
            if (res.data.code == 0) {
              this.tb.data = res.data.data.items;
              this.total = res.data.data.totalNum;
            } else {
              this.$util.failCallback(res.data, this);
            }
            this.loading = false;
          })
          .catch(err => {
            console.log(err);
            this.loading = false;
          });
      },
      // 翻页
      changePage(index) {
        this.searchForm.currentPage = index;
        if (this.hasSearch) {
          this.getList(this.conditionForm);
          this.hasSearch = false;
        } else {
          this.conditionForm = Object.assign({}, this.searchForm);
          this.getList(this.searchForm);
        }
      },

      // 选中敏感词变化
      handleSelectionChange(arr) {
        this.selected = [];
        for (var item of arr) {
          this.selected.push(item.id)
        }
      },
      openCreateDialog(btn) {
        if (this.$refs[btn.dialog.formName] !== undefined) {
          this.$refs[btn.dialog.formName].resetFields()
        }

        btn.dialog.dialogFormVisible = true

      },
      dialogCloseHandle(btn) {
        btn.dialog.dialogFormVisible = false
      },
      openEditDialog(btn, row) {

        this.tempRow = Object.assign({}, row)
        btn.dialog.dialogFormVisible = true

        btn.dialog.form = this.tempRow

      },
      dialogSubmitHandle(btn) {
        this.$refs[btn.dialog.formName].validate((valid) => {
          if (valid) {
            // btn.dialog.form = Object.assign(temp, btn.dialog.form)
            this.$axios.post(btn.dialog.url, btn.dialog.form).then((res) => {
              if (res.data.code == 0) {
                btn.dialog.dialogFormVisible = false
                this.getList(this.conditionForm)
                this.$message({
                  type: 'success',
                  message: res.data.msg
                })

              } else {
                this.$util.failCallback(res.data, this)
              }
            }).catch((err) => {
              console.log(err)
            })
          }
        })

      },
      deleteHandle(btn) {
          if (this.selected.length >= 1) {
          this.$confirm('此操作将永久删除该记录, 是否继续?', '提示', {
            confirmButtonText: '确定',
            cancelButtonText: '取消',
            type: 'warning'
          }).then(() => {
            this.$axios.post(btn.url, {ids:this.selected}).then((res) => {
              if (res.data.code == 0) {
                this.getList(this.conditionForm)
                this.$message({
                  type: 'success',
                  message: res.data.msg
                })


              } else {
                this.$util.failCallback(res.data, this)

              }
            }, (err) => {
              console.log(err)
            })
          }).catch(() => {
            // this.$message({
            //     type: 'info',
            //     message: '已取消删除'
            // });          
          });

        } else {
          this.$alert("请选择一条记录进行操作！", "提示", {
            confirmButtonText: "确定"
          });
        }
        


      },
    },

  }

</script>

<style lang="scss" scoped>
  .md-right {
    margin-right: 20px;
  }

  .table {
    margin: 0 auto; //  text-align: center;
    width: 100%
  }

  .condition-form {
    display: block;
    float: right;
    width: 660px;
    .fixed-width {
      width: 250px;
      display: inline-block;
    }
    .form-btns {
      margin-right: 20px;
    }
  }

  .el-table .cell {
    text-align: center;
  }

</style>
