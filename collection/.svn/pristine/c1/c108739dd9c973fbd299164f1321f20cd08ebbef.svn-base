<template>
  <div class="form">
    <el-dialog :close-on-click-modal="false" :show-close="true"  title="人工调案" :visible.sync="invokShow" :center="true"  id="dialog" @close="close">
       <el-form   label-width="100px">  
        <el-form-item label="选择部门" prop="aDepartmentIds" >
            <el-cascader :options="departments" v-model="aDepartmentIds"  @change="handleChange" change-on-select :props="departmentProps" clearable size="mini"> </el-cascader>
        </el-form-item>
        <el-form-item label="选择催收员"   prop="aStuffId" >
          <el-select v-model="aStuffId" clearable size="mini">
             <el-option v-for="option in workers" :label="option.name" :value="option.id" :key="option.id"></el-option>
          </el-select>
        </el-form-item>
        <el-form-item>
          <el-button size="mini" @click="cancelForm">取消</el-button>
          <el-button size="mini" type="primary" @click="submitForm">提交</el-button>
        </el-form-item>
      </el-form>  

    </el-dialog>     
  </div>
</template>
<script>
  import qs from "qs";
  export default {
    name: 'invokCase',
    data() {
      return {
        aDepartmentIds:[],
        aStuffId: '',
        departmentProps: {
          label: "name",
          value: "id"
        },
        workers: [],
        departmentId: '',
      }
    },
    props: {
      invokShow: {
        type: Boolean,
      },
      departments: {
        type: Array,
      },
      selected: {
        type: Array
      }
    },
    methods: {

      // 关闭dialog
      close() {
       // this.$refs.allotCase.resetFields();
       this.aDepartmentIds = [];
       this.$emit('invokClose');        
      },

     // 选择部门
      handleChange(data) {
        this.aStuffId = '';
        this.departmentId = this.aDepartmentIds[this.aDepartmentIds.length-1];
        this.getWorkers();
      },

      // 提交表单
      submitForm(form) {
        if(this.departmentId) {
            if(!this.aStuffId) {
              this.$alert("未选择催收员！", "提示", {
                confirmButtonText: "确定",
                type: 'warning'
              });
              return false
            } 
           this.invokChooseCase()
        } 
        else {
          this.$alert("未选择部门！", "提示", {
              confirmButtonText: "确定",
              type: 'warning'
          });
        }
      },

      // 表单重置
      cancelForm() {
        this.aDepartmentIds = [];
        this.aStuffId = '';
        this.$emit('invokClose');
      },

      // 获取所选部门的催收员
      getWorkers() {
          console.log(this.departmentId)
        this.$axios
          .post("/api/assignee/caseManage/getStaffs", {
            departmentId: this.departmentId
          })
          .then(res => {
            if (res.data.code == 0) {
              this.workers = res.data.data;
            } else {
              this.$util.failCallback(res.data, this);
            }
          })
          .catch(err => {
            console.log(err);
          });
      },

     // 人工调案
     invokChooseCase() { 
        this.$axios
          .post("/api/assignee/caseManage/invokCase", JSON.parse(JSON.stringify({
            departmentId: this.departmentId,caseIds:this.selected,staffId: this.aStuffId
          })))
          .then(res => {
            if (res.data.code == 0) {
              this.$message.success('调案成功');
              this.cancelForm();
            } else {
              this.$util.failCallback(res.data, this);
            }
          })
          .catch(err => {
            console.log(err);
          });
     }
    },
    created() {
    }
  };

</script>
<style lang="scss" scoped>
  .el-select .el-input {
      width:100%;
  }

  .el-form-item:last-child{
      text-align: right;
  }

</style>

