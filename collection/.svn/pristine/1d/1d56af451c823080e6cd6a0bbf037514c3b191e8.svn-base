<script>
 import qs from 'qs'
export default {
   components: {
  },
  data() {
   
    return {
      // 表格
      tb: {
        data: [],
        fields: [
          {
            label: "公告标题",
            key: "title",
            width: "",
            type: "0"
          },
          {
            label: "公告内容",
            key: "content",
            width: "",
            type: "0"
          },
          {
            label: "发布时间",
            key: "createTime",
            width: "250",
            type: "0"
          },
          {
            label: "公告来源",
            key: "orgName",
            width: "250",
            type: "0"
          },
          {
            label: "附件",
            key: "",
            width: "",
            type: "2",
            align:'',
          },
        ],
      },
      filterParams: {
            currentPage: 1,
            pageSize: 15,
      },
      operationBtns: [{
          name: '发布公告',
          identifier: '',
          formName: 'createForm',
          url: '/api/assignee/caseTemplate/addTemplate',
          },
          {
          name: '编辑',
          identifier: '',
          dialog: {
            dialogFormVisible: false,
            form: {
              loanInstitution:'',
              templateId:'',
              templateName:'',
              templateType:'',
              attachment:{}
            },
            rule: {

            },
            title: '编辑模板'},
          formName: 'editForm',
          url: '/api/assignee/caseTemplate/addTemplate',
          
      }],
      dropdownData: {
          templateType: []
      },
      dialogTitle:'',
      dialogVisible:false,
        // 上传
      result: "",
      filename: "",
      fileList: [],
      
      postData: {
        loanInstitution:'',
        templateId:'',
        templateName:'',
        templateType:'',
      },
      isEdit: false,
      loading:true,

    };
  },
  computed: {

  },
  created() {
    this.getList();
  },
  methods: {
    getList(data) {
      this.loading = true;
      this.$axios
        .post("/api/assignee/notice/publishList",this.filterParams)
        .then(res => {
          if (res.data.code == 0) {
            this.tb.data = res.data.data.items;
          } else {
            this.$util.failCallback(res.data, this);
          }
          this.loading = false;
        })
        .catch(err => {
          this.loading = false;
          console.log(err);
        });
    },
    getdropdownData() {
        // 获取下拉数据
        this.$axios.post('/api/assignee/caseTemplate/getTemplateTypeSelect').then((res) => {
          if (res.data.code == 0) {
            this.dropdownData.templateType = res.data.data

          } else {
            this.$util.failCallback(res.data, this)
          }
        }).catch((err) => {
          console.log(err)
        })
    },
    // 下载
    downLoad(val) {
      console.log(val);
      val.accessory.forEach(item => {

         this.$axios({
        // 用axios发送post请求
        method: "post",
        url: "/api/assignee/notice/downLoad", // 请求地址
        data: {name:item.name,url:item.url}, // 参数
        responseType: "blob" // 表明服务器返回的数据类型
      }).then(res => {
        // 处理返回的文件流
         if (res.data.type != 'application/json') {
        const content = res.data;
        console.log(res);
        const blob = new Blob([content]);
        const fileName = decodeURI(res.headers["content-disposition"].split("=")[1])
        if ("download" in document.createElement("a")) {
          // 非IE下载
          const elink = document.createElement("a");
          elink.download = fileName;
          elink.style.display = "none";
          elink.href = URL.createObjectURL(blob);
          document.body.appendChild(elink);
          elink.click();
          URL.revokeObjectURL(elink.href); // 释放URL 对象
          document.body.removeChild(elink);
        } else {
          // IE10+下载
          navigator.msSaveBlob(blob, fileName);
        }
        } else {
              this.$message({
                type: 'error',
                message: '下载失败'
              })
            }
      });
      })

     
    },

    // 跳转到发布公告
    goAnnounceSend(){
        this.$router.push({path:'/announce_send'})
    },
      // 跳转到公告详情
    goAnnounceDetail(val){
      console.log(val)
        this.$router.push({path:'/announce_detail'})
        this.bus.announceData=val
    },
    closeDialog(uploadFile){
      this.dialogVisible = false
      this.clearFiles(uploadFile)
      this.$refs.postData.resetFields()
      this.getList()
    },
   
    // 导入文件
    // 提交
    submitUpload() {
      if (this.$refs["importCase"].fileList.length == 0 && this.isEdit == false) {
        this.$message.warning(`请选择文件`);
      } else if( this.isEdit){
        this.$axios.post("api/assignee/caseTemplate/addTemplate",qs.stringify(this.postData)).then( res=> {
          if(res.data.code == 0) {
            this.$message.success('编辑成功')
            this.getList();
            this.closeDialog('importCase')
            
          } else {
            this.$util.failCallback(res.data, this);
          }
        }).catch( err => {
          console.log(err)
        })
      }else{
        this.$refs["importCase"].submit();
      }
    },
    // 上传前检查
    beforeUpload(file) {
       let index = file.name.lastIndexOf('.');
        let fileName = file.name.substring(index+1);
        let isExcel = (fileName == 'xls' || fileName == 'xlsx');
      const isLt2M = file.size / 1024 / 1024 < 2;
      if (!isExcel) {
        this.$message.error("只能上传 excel 文件!");
      } else if (!isLt2M) {
        this.$message.error("上传文件大小不能超过 2MB!");
      }
      var result = isExcel && isLt2M;
      if (!result) {
        this.file = "";
        this.fileList = [];
        this.filename = "";
      }
      return isExcel && isLt2M;
    },
    handleExceed() {
      this.$message.warning(`当前限制选择 1 个文件`);
    },
    // 导入案件
    handleSuccess_importCase(res) {
      
      if (res.code == 0) {
          // 成功
        this.$message({
          type: "success",
          message: res.msg
        });
        this.closeDialog('importCase')
     
        } else {
        this.result = res.msg + "!";
         
        }
   
    },
    // 前端上传失败
    handleError(err, file, fileList) {},
    // 文件发生变化
    handleChange(file) {
      alert(33)
      this.isEdit = false;
      var checkResult = this.beforeUpload(file);
      if (file.status == "ready" && checkResult) {
        this.filename = file.name;
        this.fileList[0] = file;
      }
    },
    // 清除文件
    clearFiles(uploadFile) {
      this.filename = "";
      this.result = "";
      this.$refs[uploadFile].clearFiles();
      this.isEdit = false;
      
    },
  }
};
</script>
