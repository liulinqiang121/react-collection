        this.$axios.post('/api/assignee/memo/getRepetitionWay', {}).then((res) => {
          if (res.data.code == 0) {
            this.dropdownData = res.data.data;


          } else {
            this.$util.failCallback(res.data, this)
          }
        }).catch((err) => {
          console.log(err)
        })
